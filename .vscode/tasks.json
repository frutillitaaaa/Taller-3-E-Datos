{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", // Flag para incluir información de depuración
                "-Iheader",
                "source/*.cpp", // Ajusta esto a tu estructura de archivos
                "main.cpp",
                "-o",
                "programa"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
